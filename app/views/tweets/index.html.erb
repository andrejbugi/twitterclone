<h1>All Tweets</h1>


<%= link_to "Tweet Now", new_tweet_path %>


<ul>

  <% @tweets.each do |tweet| %>

    <li>
      <%= link_to tweet.title, tweet_path(tweet) %>
      <%= link_to "Edit Content", edit_tweet_path(tweet) %>
      <%= link_to "Delete Tweet", tweet_path(tweet), method: :delete,
        data: { confirm: "Are you sure you want to delete this tweet?" }
      %>

    </li>

  <% end %>


</ul>

